<Window x:Class="dotNet5781_03B_2427_5101.WindowBusDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_2427_5101"
        mc:Ignorable="d"
        Title="WindowBusDetails" Height="450" Width="800">
    <Grid Name="myGrid" RenderTransformOrigin="0.529,0.575">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="License Number:" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />
        <TextBlock Grid.Row="0" Grid.Column="1" Name="tbLicense" Text="{Binding Path=LicenseNumber}" HorizontalAlignment="Stretch" Height="38"  TextWrapping="Wrap" VerticalAlignment="Stretch" Width="95"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Start Date"  HorizontalAlignment="Stretch"   VerticalAlignment="Stretch"  />
        <TextBlock Grid.Row="1" Grid.Column="1" Name="tbStart" Text="{Binding Path=Start}" HorizontalAlignment="Stretch"  TextWrapping="Wrap"  VerticalAlignment="Stretch" />
        <Label Grid.Row="2" Grid.Column="0" Content="Kilometrage:" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  />

        <TextBlock Grid.Row="2" Grid.Column="1" Name="tbKilometrage" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Text="{Binding Path=AllKmTrav}" VerticalAlignment="Stretch" />
        <Label Grid.Row="3" Grid.Column="0" Content="Km since treated:" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Name="tbKmLastTreated" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Text="{Binding Path=KmSinceTreated}" VerticalAlignment="Stretch"/>
        <Label  Grid.Row="4" Grid.Column="0" Content="Last Treated:" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="79" Margin="0,0,317,0"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Name="tbLastTreated" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Text="{Binding Path=LastTreated}" VerticalAlignment="Stretch"/>
        <Label  Grid.Row="5" Grid.Column="0" Content="Km possible:" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="79" Margin="0,0,317,0"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Name="tbKmPossible" HorizontalAlignment="Stretch"  TextWrapping="Wrap"  Text="{Binding Path=KmPossible}" VerticalAlignment="Stretch" />
        <Button Name="btTreat" Content="Send to treatment" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="btTreat_Click"></Button>
        <Button Name="btRefuel" Content="Refuel" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="btRefuel_Click"></Button>
    </Grid>
</Window>
